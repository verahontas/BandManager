@model RehearsalRoom

<h1>Terem Nr. @Model.Number</h1>

<div class="table-responsive">
    <table class="table table-sm table-borderless w-auto">
        <tr>
            <th>Ár:</th>
            <td>@Model.Price Ft/óra</td>
        </tr>
        <tr>
            <th>Méret:</th>
            <td>@Model.Size m<sup>2</sup> </td>
        </tr>
        <tr>
            <th>Leírás:</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>@Model.Studio.Name címe:</th>
            <td>@Model.Studio.Address</td>
        </tr>
    </table>
</div>

@if (ViewBag.CurrentUserRole == "owner" || ViewBag.CurrentUserRole == "administrator")
{
    <div class="row">
        <div class="col-auto">
            <a asp-action="Edit" asp-controller="RehearsalRooms" asp-route-roomId="@Model.Id" class="btn btn-primary">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                </svg>
                Szerkesztés
            </a>
        </div>
        <div class="col-auto">
            <div id="AddPictures"></div>
        </div>
        <div class="col-auto">
            <a class="btn btn-outline-danger" asp-action="DeleteRoomImages" asp-controller="RehearsalRooms" asp-route-roomId="@Model.Id">Képek törlése</a>
        </div>
    </div>
    
    
}

<h4>Felszereltség</h4>
@if (Model.Equipments == null)
{
    <p>A teremben található felszerelésről nem található leírás.</p>
}
else
{
    <p>
    @Html.Raw("<pre>" + Html.Encode(Model.Equipments) + "</pre>")
    </p>
}

<script>
    $(document).ready(function () {
        var link = '@Html.Raw(@Url.Action("AddPicturesToRoomPartial", "RehearsalRooms", new { roomId = 0 } )) ';
        link = link.replace("0", @Model.Id);
        $("#AddPictures").load(link);
    });
</script>