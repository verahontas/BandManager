@model RehearsalStudio

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Név</th>
                <th>Cím</th>
                <th>Telefon</th>
                <th>Web</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="list-background">
    <div class="row">
        <div class="col">
            <h1><a asp-controller="RehearsalStudios" asp-action="Details" asp-route-studioId="@Model.Id">@Model.Name</a></h1>
            <div>
                <p><strong>Cím: </strong>@Model.Address</p>
                <p><strong>Telefon: </strong>@Model.Phone</p>
                <p><strong>Weboldal: </strong>@Model.Web</p>
            </div>
        </div>
        
        <div class="col">
            <a asp-action="Details" asp-route-studioId="@Model.Id" class="btn btn-primary btn-lg">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-three-dots" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                </svg>
                Részletek
            </a>
            @if (ViewBag.CurrentUserRole == "owner" || ViewBag.CurrentUserRole == "administrator")
            {
                <a asp-action="Edit" asp-route-studioId="@Model.Id" class="btn btn-primary btn-lg">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                    Szerkesztés
                </a>
                <a asp-action="Delete" asp-route-studioId="@Model.Id" class="btn btn-danger btn-lg">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-square-fill red-text" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                    </svg>
                    Törlés
                </a>
            }
        </div>
    </div>
        
</div> 