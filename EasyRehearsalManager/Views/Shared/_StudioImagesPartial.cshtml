
@if (ViewBag.Images == null || ViewBag.Images.Count == 0)
{
    <div class="alert alert-warning">Nincs kép feltöltve ehhez a próbateremhez.</div>
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="max-width: 50em; max-height: 50em;">
    <ol class="carousel-indicators">
        @if (ViewBag.Images != null && ViewBag.Images.Count > 0)
        {
            <!--Bootstrap Note: The .active class needs to be added to one of the slides. Otherwise, the carousel will not be visible.-->
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        }
        @for (int i = 1; i < ViewBag.Images.Count; ++i)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
        }
    </ol>
    <div class="carousel-inner">
        @if (ViewBag.Images != null && ViewBag.Images.Count > 0)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Url.Action("GetImage", "RehearsalStudios", new { imageId = ViewBag.Images[0] })">
            </div>
            @for (int i = 1; i < ViewBag.Images.Count; ++i)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Action("GetImage", "RehearsalStudios", new { imageId = ViewBag.Images[i] })">
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>