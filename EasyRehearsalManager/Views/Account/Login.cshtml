@model LoginViewModel

<div class="row">
    <div class="col-md-5">
        <form asp-controller="Account" asp-action="Login">
            <table>
                <tr>
                    <td colspan="2">
                        <div class="failureNotification">@ViewBag.Information</div>
                        <div asp-validation-summary="ModelOnly" class="failureNotification"></div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="contentHead">
                            Bejelentkezési adatok:
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="120">
                        Felhasználónév:
                    </td>
                    <td class="failureNotification">
                        <div class="form-group">
                            <input asp-for="UserName" />
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="120">
                        Jelszó:
                    </td>
                    <td class="failureNotification">
                        <input asp-for="UserPassword" />
                        <span asp-validation-for="UserPassword"></span>
                    </td>
                </tr>
                <tr>
                    <td width="120"></td>
                    <td>
                        <input asp-for="RememberLogin" />
                        Bejelentkezés megjegyzése
                    </td>
                </tr>
                <tr>
                    <td colspan="2" height="50">
                        <input type="submit" value="Bejelentkezés" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
