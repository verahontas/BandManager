@model MusicianRegistrationViewModel

<form asp-controller="Account" asp-action="RegisterAsMusician">
    <table>
        <tr>
            <td colspan="3">
                <div class="failureNotification">@Html.ValidationSummary(true, "A regisztráció sikertelen!")</div>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="contentHead">
                    Személyes adatok:
                </div>
            </td>
        </tr>
        <tr>
            <td width="120">
                Név:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="UserOwnName" size="40" />
                <span asp-validation-for="UserOwnName"></span>
            </td>

        </tr>
        <tr>
            <td width="120">
                E-mail cím:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="UserEmail" size="40" />
                <span asp-validation-for="UserEmail"></span>
            </td>

        </tr>
        <tr>
            <td width="120">
                Telefonszám:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="UserPhoneNumber" size="40" />
                <span asp-validation-for="UserPhoneNumber"></span>
            </td>
        </tr>
        <tr>
            <td width="120">
                Alapértelmezett zenekarnév:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="BandName" size="40" />
                <span asp-validation-for="BandName"></span>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="contentHead">
                    Bejelentkezési adatok:
                </div>
            </td>
        </tr>
        <tr>
            <td width="150" colspan="2">
                Felhasználónév:
            </td>
            <td class="failureNotification">
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </td>
        </tr>
        <tr>
            <td width="150" colspan="2">
                Jelszó:
            </td>
            <td class="failureNotification">
                <input asp-for="UserPassword" />
                <span asp-validation-for="UserPassword"></span>
            </td>
        </tr>
        <tr>
            <td width="150" colspan="2">
                Jelszó megismétlése:
            </td>
            <td class="failureNotification">
                <input asp-for="UserConfirmPassword" />
                <span asp-validation-for="UserConfirmPassword"></span>
            </td>
        </tr>
        <tr>
            <td colspan="3" height="70">
                <br />A felhasználónév és a jelszó minimum 8, maximum 40 karakter hosszú lehet. Csak betűt, számot és kötőjelet tartalmathat.<br /><br />
                <input type="submit" value="Regisztráció" class="button" />
            </td>
        </tr>
    </table>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
