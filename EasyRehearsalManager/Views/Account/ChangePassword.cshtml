@model ChangePasswordViewModel

<div class="light-color-letters">

    <h1 class="display-4">Jelszóváltoztatás</h1>

    <form asp-controller="Account" asp-action="ChangePassword">
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label for="oldPwd">Régi jelszó</label>
            <div class="failureNotification">
                <div class="form-group">
                    <input type="password" class="form-control" style="max-width: 300px;" id="oldPwd" asp-for="OldPassword" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="newPwd">Új jelszó</label>
            <div class="failureNotification">
                <div class="form-group">
                    <input type="password" class="form-control" style="max-width: 300px;" id="newPwd" asp-for="NewPassword" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="newPwd2">Új jelszó ismét</label>
            <div class="failureNotification">
                <div class="form-group">
                    <input type="password" class="form-control" style="max-width: 300px;" id="newPwd2" asp-for="ConfirmNewPassword" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="submit" value="Jelszó megváltoztatása" class="btn btn-primary align-baseline mt-4" />
        <a asp-action="Details" asp-route-userId="@Model.UserId" class="btn btn-outline-danger align-baseline mt-4">Mégsem</a>
    </form>
</div>

@section Scripts
{
        <partial name="_ValidationScriptsPartial" />
}
