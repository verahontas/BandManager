@model RehearsalStudio

<h1 class="display-4 color-light">@Model.Name</h1>

<div class="row">
    <div class="col-auto">
        <div class="row my-sidebar" id="aboutStudio" role="button">
            <h3>Áttekintés</h3>
        </div>
        <div class="row my-sidebar" id="studioContacts" role="button">
            <h3>Elérhetőség</h3>
        </div>
        <div class="row my-sidebar" id="roomsOfStudio" role="button">
            <h3>Termek</h3>
        </div>
        <div class="row my-sidebar" id="pictureSlideStudio" role="button">
            <h3>Képek</h3>
        </div>
        <div class="row my-sidebar" id="onlineReservationStudio" role="button">
            <h3>Online foglalás</h3>
        </div>
    </div>
    <div class="col-auto" id="contentCard"></div>
</div>

<script>
    $(document).ready(function () {
        var link = '@Html.Raw(@Url.Action("GetAboutStudioPartial", "RehearsalStudios", new { studioId = 100 } )) ';
        var studioId = @Model.Id;
        link = link.replace("100", studioId);
        $("#contentCard").load(link);

        $("#aboutStudio").click(function () {
            var link = '@Html.Raw(@Url.Action("GetAboutStudioPartial", "RehearsalStudios", new { studioId = 100 } )) ';
            var studioId = @Model.Id;
            link = link.replace("100", studioId);
            $("#contentCard").load(link);
        });

        $("#studioContacts").click(function () {
            var link = '@Html.Raw(@Url.Action("GetStudioContactsPartial", "RehearsalStudios", new { studioId = 100 } )) ';
            var studioId = @Model.Id;
            link = link.replace("100", studioId);
            $("#contentCard").load(link);
        });

        $("#roomsOfStudio").click(function () {
            var link = '@Html.Raw(@Url.Action("GetRoomsOfStudioPartial", "RehearsalStudios", new { studioId = 100 } )) ';
            var studioId = @Model.Id;
            link = link.replace("100", studioId);
            $("#contentCard").load(link);
        });

        $("#pictureSlideStudio").click(function () {
            var link = '@Html.Raw(@Url.Action("GetImagesForStudioPartial", "RehearsalStudios", new { studioId = 100 } )) ';
            var studioId = @Model.Id;
            link = link.replace("100", studioId);
            $("#contentCard").load(link);
        });

        $("#onlineReservationStudio").click(function () {
            var link = '@Html.Raw(@Url.Action("GetStudioReservationsTablePartial", "RehearsalStudios", new { studioId = 100 } )) ';
            var studioId = @Model.Id;
            link = link.replace("100", studioId);
            $("#contentCard").load(link);
        });


        link = '@Html.Raw(@Url.Action("AddPicturesToStudioPartial", "RehearsalStudios", new { studioId = 0 } )) ';
        link = link.replace("0", @Model.Id);
        $("#AddPictures").load(link);

        link = '@Html.Raw(@Url.Action("ChangeLogoPartial", "RehearsalStudios", new { studioId = 0 } )) ';
        link = link.replace("0", @Model.Id);
        $("#ChangeLogo").load(link);
    });
</script>