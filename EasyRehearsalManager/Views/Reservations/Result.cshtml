@model ReservationViewModel

<table class="table table-striped w-auto">
    @if (ViewBag.CurrentUserRole == "musician")
    {
        <tr>
            <th scope="row">Zenekar neve:</th>
            <td>@Model.BandName</td>
        </tr>
    }
    <tr>
        <th>Telefonszám:</th>
        <td>@Model.UserPhoneNumber</td>
    </tr>
    <tr>
        <th>Foglalás időpontja:</th>
        <td>@Model.Day.Date napon @Model.StartHour:00 - @Model.EndHour:00</td>
    </tr>
    <tr>
        <th>Terem száma:</th>
        <td>@Model.Room.Number</td>
    </tr>
    <tr>
        <th>Próbahely neve:</th>
        <td>@Model.Room.Studio.Name</td>
    </tr>
    <tr>
        <th>Foglaló neve:</th>
        <td>@Model.UserOwnName</td>
    </tr>
</table>

<div>
    <a asp-action="Index" asp-controller="RehearsalRooms" class="btn btn-secondary mb-4">Vissza a termekhez</a>
</div>