@model RehearsalRoom

@{
    ViewData["Title"] = "Terem létrehozása";
}

<div class="light-color-letters">

<h1 class="display-4">Terem létrehozása</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model != null && Model.StudioId != 0)
            {
                <input type="hidden" asp-for="StudioId" />
            }
            else
            {
                <div class="form-group">
                    <label asp-for="StudioId" class="control-label">Próbahely</label>
                    <select asp-for="StudioId" class="form-control" asp-items="ViewBag.Studios"></select>
                    <span asp-validation-for="StudioId" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Number" class="control-label">Terem száma</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Leírás</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Ár (Ft/óra)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label">Méret (m<sup>2</sup>)</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipments" class="control-label">Eszközök</label>
                <textarea asp-for="Equipments" class="form-control"></textarea>
                <small class="form-text text-muted">Adja meg, milyen felszerelések állnak rendelkezésre ebben a teremben.</small>
            </div>
            <div class="form-group form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Available" /> Bérelhető
                </label>
                <br />
                <small>Jelölje be, hogy a terem jelenleg bérelhető állapotban van-e.</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-primary align-baseline mt-2" />
                <a class="btn btn-outline-danger align-baseline mt-2" asp-action="Index">Mégsem</a>
            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
