@model IEnumerable<RehearsalRoom>

@{
    ViewData["Title"] = "Próbatermek";
}

<h1>Próbatermek</h1>

@if (ViewBag.CurrentUserRole == "owner" || ViewBag.CurrentUserRole == "administrator")
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Új próbaterem hozzáadása</a>
    </p>
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NumberSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    Terem sorszáma
                </a>
            </th>
            <th>
                Leírás
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    Ár
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SizeSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    Méret
                </a>
            </th>
            <th>
                Cím
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StudioNameSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    Próbahely neve
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-roomId="@item.Id">@item.Number</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) Ft/óra
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size) m<sup>2</sup>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Studio.Address)
                </td>
                <td>
                    <a asp-controller="RehearsalStudios" asp-action="Details" asp-route-studioId="@item.StudioId">@item.Studio.Name</a>
                </td>
                <td>
                    @if (ViewBag.CurrentUserRole == "owner" || ViewBag.CurrentUserRole == "administrator")
                    {
                       <a asp-action="Edit" asp-route-roomId="@item.Id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a><storng>|</storng>
                        <a asp-action="Delete" asp-route-roomId="@item.Id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-square-fill red-text" fill="red" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                            </svg>
                        </a>
                    }

                    <a asp-action="Details" asp-route-roomId="@item.Id">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-three-dots" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                        </svg>
                    </a> |
                    <a asp-controller="Reservations" asp-action="Create" asp-route-roomId="@item.Id" class="btn btn-primary">Foglalás</a>
                </td>
            </tr>
        }
    </tbody>
</table>
