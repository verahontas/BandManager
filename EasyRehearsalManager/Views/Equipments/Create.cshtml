@model EasyRehearsalManager.Model.Equipment

@{
    ViewData["Title"] = "Eszköz létrehozása";
}

<div class="light-color-letters">

    <h1 class="display-4">Eszköz regisztrálása a @ViewBag.StudioName helynek</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StudioId" class="form-control" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Eszköz neve</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantityAvailable" class="control-label">Rendelkezésre álló mennyiség (db)</label>
                    <input asp-for="QuantityAvailable" class="form-control" />
                    <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Mentés" class="btn btn-primary mt-2" />
                </div>
            </form>
        </div>
    </div>

</div>