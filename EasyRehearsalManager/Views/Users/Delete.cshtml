@model EasyRehearsalManager.Model.User

@{
    ViewData["Title"] = "Delete";
}

<h1>Felhasználó törlése</h1>

<h3>Biztos benne, hogy törli az alábbi felhasználót?</h3>

<div class="table-responsive">
        <table class="table table-striped w-auto table-bordered">
            <tr>
                <th>Név:</th>
                <td>@Model.UserOwnName</td>
            </tr>
            <tr>
                <th>Felhasználónév:</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Email cím:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefonszám:</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                @if (ViewBag.CurrentUserRole == "musician")
                {
                    <th>Alapértelmezett zenekarnév:</th>
                    <td>@Model.DefaultBandName</td>
                }
            </tr>
        </table>
    
    <form asp-action="Delete" asp-route-userId="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Vissza</a>
    </form>
</div>
